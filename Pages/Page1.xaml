<Page x:Class="MaistrovaControl10.Pages.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MaistrovaControl10.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="600"
      Title="Page1">

    <Grid>
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Номер вагона" Margin="180 0 0 0" FontSize="20" Foreground="#FF00A000" FontWeight="Bold"/>
            <TextBox MaxLength="10" Height="40" Width="250" BorderBrush="#FF00FF3B" Name="TBNumber"/>
            <TextBlock Text="Этажность вагона" Margin="180 0 0 0" FontSize="20" Foreground="#FF00A000" FontWeight="Bold"/>
            <ComboBox Height="40" Width="250" BorderBrush="#FF0CFF00" Name="VagonItaCB" DisplayMemberPath="TitleFloors" SelectedValuePath="PersonalNumberFloors"/>
            <Button Content="Создать" Margin="20" Height="40" Width="100" FontSize="15" FontWeight="Bold" Foreground="#FF00A000" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Page>
